generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Track {
  id         String   @id @default(cuid())
  title      String
  artist     String
  durationS  Float?
  s3Key      String   @unique
  status     TrackStatus @default(QUEUED)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum TrackStatus {
  QUEUED
  FINGERPRINTING
  READY
  FAILED
}